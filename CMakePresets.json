{
    "version": 6,
    "configurePresets": [
        {
            "name": "c++_setup",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CXX_EXTENSIONS": "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "common",
            "hidden": true, 
            "binaryDir": "build/${presetName}"
        },
        {
            "name": "debug",
            "inherits": ["common", "c++_setup"],
            "generator": "Ninja",
            "displayName": "Debug",
            "description": "Configure debug build"
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "configuration": "Debug",
            "configurePreset": "debug"
        }
    ]
}