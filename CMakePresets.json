{
    "version": 6,
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CXX_EXTENSIONS": false
            }
        },
        {
            "name": "ninja",
            "displayName": "Ninja",
            "generator": "Ninja Multi-Config",
            "inherits": "common",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Wall -Wextra -pedantic",
                "CMAKE_CXX_FLAGS_DEBUG": "-g -O0",
                "CMAKE_CXX_FLAGS_RELEASE": "-O2 -DNDEBUG",
                "BUILD_TESTS": "On"
            }
        },
        {
            "name": "configure-docs",
            "displayName": "Configure Documentation",
            "binaryDir": "build/docs",
            "cacheVariables": {
                "BUILD_DOCS": "On",
                "BUILD_EXAMPLES": "Off"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ninja-debug",
            "configuration": "Debug",
            "configurePreset": "ninja",
            "displayName": "Ninja Debug",
            "description": "Debug build using Ninja on Linux with GCC/clang"
        },
        {
            "name": "ninja-release",
            "configuration": "Release",
            "configurePreset": "ninja",
            "displayName": "Ninja Release",
            "description": "Release build using Ninja on Linux with GCC/clang"
        },
        {
            "name": "build-docs",
            "displayName": "Documentation",
            "description": "Build documentation",
            "configurePreset": "configure-docs",
            "targets": [
                "sphinx",
                "doxygen"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "ninja",
            "configuration": "Debug",
            "configurePreset": "ninja",
            "displayName": "Run Tests built using Ninja",
            "output": {
                "outputOnFailure": true
            }
        }
    ],
    "workflowPresets": [
        {
            "name": "ninja-debug",
            "description": "Ninja",
            "steps": [
                {
                    "type": "configure",
                    "name": "ninja"
                },
                {
                    "type": "build",
                    "name": "ninja-debug"
                },
                {
                    "type": "test",
                    "name": "ninja"
                }
            ]
        },
        {
            "name": "ninja-release",
            "displayName": "Ninja Release",
            "steps": [
                {
                    "type": "configure",
                    "name": "ninja"
                },
                {
                    "type": "build",
                    "name": "ninja-release"
                }
            ]
        },
        {
            "name": "build-docs",
            "displayName": "Build Docs",
            "description": "Build documentation",
            "steps": [
                {
                    "type": "configure",
                    "name": "configure-docs"
                },
                {
                    "type": "build",
                    "name": "build-docs"
                }
            ]
        }
    ]
}